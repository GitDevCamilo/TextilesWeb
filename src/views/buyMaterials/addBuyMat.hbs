<div class="conatiner p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-uppercase">AÃ‘ADIR UNA NUEVA COMPRA DE MATERIALES</h3>
        </div>
        <div class="card-body">
          <form action="/addBuyMat" method="post">
            <div class="input-group mt-2">
              <label for="name" class="input-group-text">Id compra</label>
              <input
                class="form-control"
                type="number"
                name="com_id"
                id="com_id"
                autofocus
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="lastname" class="input-group-text">Id material</label>
              <input
                class="form-control"
                type="number"
                name="mat_id"
                id="mat_id"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="age" class="input-group-text">Id administrador</label>
              <input
                class="form-control"
                type="number"
                name="adm_id"
                id="adm_id"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="age" class="input-group-text">Cantidad</label>
              <input
                class="form-control"
                type="number"
                name="com_cantidad"
                id="com_cantidad"
                placeholder="Ejemplo: 10"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="age" class="input-group-text">Fecha Compra</label>
              <input
                class="form-control"
                type="date"
                name="com_fecha"
                id="com_fecha"
                placeholder="Ejemplo: 2021-10-10"
                required
              />
            </div>
            <div class="form-group mt-4 d-grid gap-2">
              <button class="btn btn-success">Agregar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>