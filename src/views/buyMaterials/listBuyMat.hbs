<main class="d-flex">
    {{>verticalNavigation}}
    <div class="container mt-2">
        <div class="row m-auto">
            <h3 class="text-center p-2">LISTA DE LA COMPRA DE MATERIALES</h3>
            {{#if buyMaterials}}
            <div class="mb-2 d-flex justify-content-end">
                <a href="/addBuyMat" class="btn btn-primary">
                    Nueva Compra de Materiales
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <table class="table table-hover shadow">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Id Compra</th>
                        <th scope="col">Id Material</th>
                        {{!-- <th scope="col">Id Administrador</th> --}}
                        <th scope="col">Cantidad de Compra</th>
                        <th scope="col">Fecha de Compra</th>
                        <th scope="col" style="width: 5%; text-align: center;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each buyMaterials}}
                    <tr>
                        <td>{{com_id}} </td>
                        <td>{{mat_id}} </td>
                        {{!-- <td>{{adm_id}} </td> --}}
                        <td>{{com_cantidad}} </td>
                        <td class="com-fecha" data-date="{{com_fecha}}">{{com_fecha}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editBuyMat/{{com_id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="/deleteBuyMat/{{com_id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                {{!-- <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Materia Prima</td>
                    </tr>
                </tfoot> --}}
            </table>
        </div>
        {{else }}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card_header">
                <h3>Tabla vac√≠a, ingesar nuevas compra de materiales</h3>
            </div>
            <div class="card-body">
                <p>Preciona para registrar una nueva compra</p>
                <a href="#" class="btn btn-primary">Nueva Compra</a>
            </div>
            {{/if}}
        </div>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const dateElements = document.querySelectorAll('.com-fecha');
        dateElements.forEach((el) => {
            const dateStr = el.getAttribute('data-date');
            const date = new Date(dateStr);
            const formattedDate = ('0' + date.getDate()).slice(-2) + '/' +
                                  ('0' + (date.getMonth() + 1)).slice(-2) + '/' +
                                  date.getFullYear();
            el.innerText = formattedDate;
        });
    });
</script>
