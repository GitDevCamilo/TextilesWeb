<div class="conatiner p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-uppercase">EDITANDO CLIENTES</h3>
        </div>
        <div class="card-body">
          <form action="/editClie/{{cliente.clie_id}}" method="post">
            <div class="input-group mt-2">
              <label for="name" class="input-group-text">Id</label>
              <input
                value="{{cliente.clie_id}}"
                class="form-control"
                type="number"
                name="clie_id"
                id="clie_id"
                autofocus
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="lastname" class="input-group-text">Nombre</label>
              <input
                value="{{cliente.clie_nombre}}"
                class="form-control"
                type="text"
                name="clie_nombre"
                id="clie_nombre"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="lastname" class="input-group-text">Apellido</label>
              <input
                value="{{cliente.clie_apellido}}"
                class="form-control"
                type="text"
                name="clie_apellido"
                id="clie_apellido"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="age" class="input-group-text">Telefono</label>
              <input
                value="{{cliente.clie_telefono}}"
                class="form-control"
                type="text"
                name="clie_telefono"
                id="clie_telefono"
                required
              />
            </div>
            <div class="form-group mt-4 d-grid gap-2">
              <button class="btn btn-success">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>