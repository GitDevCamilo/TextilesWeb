<main class="d-flex">
    {{>verticalNavigation}}
    <div class="container mt-2">
        <div class="row m-auto">
            <h3 class="text-center p-2">LISTA DE CLIENTES</h3>
            {{#if clientes}}
            <div class="mb-2 d-flex justify-content-end">
                <a href="/addClie" class="btn btn-primary">
                    Nuevo Clientes
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <table class="table table-hover shadow">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Telefono</th>
                        <th scope="col" style="width: 5%; text-align: center;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each clientes}}
                    <tr>
                        <td>{{clie_id}} </td>
                        <td>{{nombre}} </td>
                        <td>{{clie_telefono}} </td>
                        <td>
                            <div class="btn-group">
                                <a href="/editClie/{{clie_id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="/deleteClie/{{clie_id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                {{!-- <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Materia Prima</td>
                    </tr>
                </tfoot> --}}
            </table>
        </div>
        {{else }}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card_header">
                <h3>Tabla vac√≠a, ingesar nuevos clientes</h3>
            </div>
            <div class="card-body">
                <p>Preciona para registrar un nuevo cliente</p>
                <a href="#" class="btn btn-primary">Nuevo Cliente</a>
            </div>
            {{/if}}
        </div>
    </div>
</main>