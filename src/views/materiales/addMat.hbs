<div class="conatiner p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-uppercase">AÑADIR UN NUEVO MATERIAL</h3>
        </div>
        <div class="card-body">
          <form action="/addMat" method="post">
            <div class="input-group mt-2">
              <label for="name" class="input-group-text">Id Material</label>
              <input
                class="form-control"
                type="number"
                name="mat_id"
                id="mat_id"
                autofocus
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="lastname" class="input-group-text">Nombre</label>
              <input
                class="form-control"
                type="text"
                name="mat_nombre"
                id="mat_nombre"
                placeholder="Ejemplo: Hilo de algodón"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="age" class="input-group-text">Descripción</label>
              <input
                class="form-control"
                type="textarea"
                name="mat_descripcion"
                id="mat_descripcion"
                placeholder="Ejemplo: Rollo de 100 metros"
                required
              />
            </div><div class="input-group mt-2">
              <label for="age" class="input-group-text">Precio</label>
              <input
                class="form-control"
                type="number"
                name="mat_precio"
                id="mat_precio"
                placeholder="Ejemplo: 20000"
                required
              />
            </div>
            <div class="form-group mt-4 d-grid gap-2">
              <button class="btn btn-success">Agregar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>