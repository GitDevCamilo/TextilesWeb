<div class="conatiner p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-uppercase">AÃ‘ADIR UN NUEVO PRODUCTO</h3>
        </div>
        <div class="card-body">
          <form action="/addProd" method="post">
            <div class="input-group mt-2">
              <label for="name" class="input-group-text">Id Producto</label>
              <input
                class="form-control"
                type="number"
                name="prod_id"
                id="prod_id"
                autofocus
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="lastname" class="input-group-text">Precio Unidad</label>
              <input
                class="form-control"
                type="number"
                name="prod_precioUni"
                id="prod_precioUni"
                placeholder="Ejemplo: 20000"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="age" class="input-group-text">Precio Mayor</label>
              <input
                class="form-control"
                type="number"
                name="prod_precioMayor"
                id="prod_precioMayor"
                placeholder="Ejemplo: 18000"
                required
              />
            </div><div class="input-group mt-2">
              <label for="age" class="input-group-text">Tipo</label>
              <input
                class="form-control"
                type="text"
                name="prod_tipo"
                id="prod_tipo"
                placeholder="Ejemplo: Uniforme escolar"
                required
              />
            </div>
            <div class="form-group mt-4 d-grid gap-2">
              <button class="btn btn-success">Agregar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>